% باز تعریف محیط newacronym برای فهرست اختصارات
\renewcommand{\newacronym}[4]{%
	\oldnewglossaryentry{#1}{%
		type = abrr,%
		name={\lr{#2}},%
		plural={\lr{#3}},%
		description = {}%
	}%
}%

% باز تعریف محیط newnotation برای فهرست نمادها
