\renewrobustcmd*{\glspl}{\@ifstar\@msglspl\@mglspl}
\newcommand*{\@mglspl}[1] {%
	\ifthenelse{\equal{\glsentrytype{#1}}{english}}{%
		\oldglspl{#1}%
		\oldglsuseri{#1}%
	}{%
		\oldglspl{#1}%
	}%
}

